root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[*.{html,css,scss,js,jsx,ts,tsx}]
quote_type = single

[*.{yml,yaml}]
indent_size = 2