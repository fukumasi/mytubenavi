{
  "compilerOptions": {
    /* --------------------------------------------------
     * 出力ターゲット & ランタイム
     * -------------------------------------------------- */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* --------------------------------------------------
     * モジュール解決
     * -------------------------------------------------- */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* --------------------------------------------------
     * React / JSX
     * -------------------------------------------------- */
    "jsx": "react-jsx",

    /* --------------------------------------------------
     * 型チェック
     * -------------------------------------------------- */
    "strict": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "useUnknownInCatchVariables": false,   /* 任意 */

    /* --------------------------------------------------
     * 絶対インポート設定
     * -------------------------------------------------- */
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },

    /* --------------------------------------------------
     * ビルド出力
     * -------------------------------------------------- */
    "noEmit": true
  },

  "include": ["src", "legacy"]
}
